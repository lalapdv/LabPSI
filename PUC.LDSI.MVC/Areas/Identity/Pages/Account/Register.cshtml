@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro de Usuário";
}

<h2>@ViewData["Title"]</h2>

<script>
    $(document).ready(function(){
        $("input[type='radio']").click(function(){
            var radioValue = $(this).val();

            $(".ambos").css("display", "inline");

            if (radioValue == "2")
                $(".aluno").css("display", "inline");
            else
                $(".aluno").css("display", "none");
        });
    });
</script>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Preencha o formulário abaixo para criar uma nova conta de usuário</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Tipo"></label><br />
                <input type="radio" value="1" asp-for="Input.Tipo" />Sou Professor
                <input type="radio" value="2" asp-for="Input.Tipo" />Sou Aluno
                <span asp-validation-for="Input.Tipo" class="text-danger"></span><br />
            </div>
            <div class="form-group ambos" style="display:none">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span><br />
            </div>
            <div class="form-group ambos" style="display:none">
                <label asp-for="Input.Nome"></label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span><br />
            </div>
            <div class="form-group aluno" style="display:none">
                <label asp-for="Input.TurmaId" class="control-label"></label>
                <select asp-for="Input.TurmaId" class="form-control" asp-items="@Model.Turmas()"></select><br />
            </div>
            <div class="form-group ambos" style="display:none">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span><br />
            </div>
            <div class="form-group ambos" style="display:none">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span><br />
            </div>
            <button type="submit" class="btn btn-default ambos" style="display:none;margin-top:10px">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}