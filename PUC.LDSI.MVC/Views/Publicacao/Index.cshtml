@model IEnumerable<PublicacaoViewModel>
@{
    ViewData["Title"] = "Publicações";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-default">Nova Publicação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Turma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Avaliacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ValorProva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DataFim)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Turma.Nome)
                </td>
                <td>
                    @(item.Avaliacao.Materia + " - " + item.Avaliacao.Disciplina + " - " + item.Avaliacao.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorProva)
                </td>
                <td>
                    @item.DataCriacao.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.DataInicio.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.DataFim.ToString("dd/MM/yyyy")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" title="Editar Publicação"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt" title="Excluir Publicação"></i></a>&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
